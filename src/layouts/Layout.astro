---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Astro Descripcion" />
    <!-- icono -->
    <link rel="icon" href="/portfolio-icon.png" />
    
    <title>{title}</title>

    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
  </head>
  <body>
    <div class="absolute top-0 z-[-2] bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
      <slot/>
    </div>
  </body>
  
</html>

<style is:global>
  :root {
    font-family: "Courier New", Courier, monospace;
    color: #fff; 
  }

  html{
    scroll-behavior: smooth;
  }
  
</style>
