---
import { skills } from "../../const/const";
import { getIconComponent } from "../../icons/IconAll.astro";
---

<section class="mt-10 mx-6" id="skills" >
  <h1 class="text-4xl font-bold text-teal-400 text-center mb-6 ">TECNOLOG√çAS</h1>

  <ul class="flex flex-wrap justify-center items-center gap-8">
    {
      skills.map(({ icon, title }) => {
        const IconComponent = getIconComponent(icon);
        return (
          <li class="w-20 flex flex-col items-center justify-center gap-3">
            {IconComponent && <IconComponent />}
            <p class="text-center">{title}</p>
          </li>
        );
      })
    }
  
</section>